<Window x:Class="JapanNUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Cursor="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Image Name="debugDepthImage" Stretch="Fill" />
        <Canvas Name="clientCanvas" Grid.Row="0">
            <Image Name="defaultCursor" Width="24" Height="24" Source="/JapanNUI;component/Images/gear.ico" Margin="-12"/>
            <Image Name="secondaryCursor" Width="24" Height="24" Source="/JapanNUI;component/Images/About.png" Margin="-12"/>
        </Canvas>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <TextBlock VerticalAlignment="Center" Margin="0,0,5,0">Current Gesture:</TextBlock>
            <TextBlock VerticalAlignment="Center" Name="currentGesture"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <TextBlock VerticalAlignment="Center" Margin="0,0,5,0">Current Movement:</TextBlock>
            <TextBlock VerticalAlignment="Center" Name="currentRecognizedMovement"/>
        </StackPanel>
    </Grid>
</Window>
